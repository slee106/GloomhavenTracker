@using GloomhavenTracker.Models
@model List<PartyViewModel>
@{
    ViewData["Title"] = "Party";
}

<div class="text-center">
    <h1 class="display-4">List of Parties</h1>
    <table class="table table-bordered table-responsive table-hover">  
        <tr>  
            <th>Party Name</th>   
            <th>Actions</th>   
        </tr>  
        @foreach (var d in Model)  
        {  
            <tr> 
                <td>
                    @Html.ActionLink(d.Name, "Detail", new { id = d.Id })
                </td> 
                <td>
                    <div>@Html.ActionLink("Delete", "Delete", new { id = d.Id })</div>
                    <div>@Html.ActionLink("Edit", "Edit", new { id = d.Id})</div>
                </td> 
            </tr>  
        }  
    </table>
    <form method="get" asp-controller="Party" asp-action="Create">
        <input type="submit" value="Create party" />
    </form>
</div>
