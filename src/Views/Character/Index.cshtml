@using GloomhavenTracker.Models.ViewModels
@model CharacterViewModel

@{
    ViewData["Title"] = "Characters";
}

<div class="text-center">
    <h1 class="display-4">List of Characters belonging to @Model.PartyName</h1>
    <table class="table table-bordered table-hover">  
        <tr>  
            <th>Character</th>   
            <th>Actions</th>   
        </tr>  
        @foreach (var d in Model.Characters)  
        {  
            <tr> 
                <td>
                    @Html.ActionLink(d.Name, "Detail", new { id = d.Id })
                </td> 
                <td>
                    <div>@Html.ActionLink("Delete", "Delete", new { id = d.Id, partyId = Model.PartyId }, new { onclick = "return confirm('Are you sure you wish to delete this article?');" }) || @Html.ActionLink("Edit", "Edit", new { id = d.Id})</div>
                </td> 
            </tr>  
        }  
    </table>
    <div>
        @Html.ActionLink("Add Character", "Create", "Character",new {partyId= Model.PartyId}, new { @class = "btn btn-default" })
    </div>
</div>