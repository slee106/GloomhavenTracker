@using GloomhavenTracker.Models.ViewModels
@using GloomhavenTracker.Models.Enums
@model CharacterDetailViewModel
@{
    ViewData["Title"] = @Model.Character.Name;
}

<div class="text-center">
    <h1 class="display-4">@Model.Character.Name - @Model.Character.Class.ToString()</h1>
    <table class="table table-hover">
        <tr>
            <td>
                @Html.LabelFor(modelItem=> @Model.Character.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => @Model.Character.Level)
                @if (@Model.Character.Party.Prosperity > @Model.Character.Level || @Model.Character.ExperiencePoints >= @Model.ExperiencePointsForNextLevel)
                {
                    <p style="color: red;">(You can Increase your character level)</p>
                }
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(modelItem=> @Model.Character.ExperiencePoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => @Model.Character.ExperiencePoints)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(modelItem=> @Model.Character.Gold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => @Model.Character.Gold)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(modelItem=> @Model.Character.Party.Name, "Party Name")
            </td>
            <td>
                @Html.DisplayFor(modelItem => @Model.Character.Party.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(modelItem=> @Model.Character.CreationDate)
            </td>
            <td>
                @Model.Character.CreationDate.ToString("dd/MM/yyyy")
            </td>
        </tr>
        @if (@Model.Character.RetirementDate != null)
        {
            <tr>
                <td>
                    @Html.LabelFor(modelItem=> @Model.Character.RetirementDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Character.RetirementDate)
                </td>
            </tr>
        }
    </table>
    @if (@Model.Items != null)
    {
        <h3 style="text-align: left;">Items</h3>
        <table>
            @foreach (var item in @Model.Items)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@item.Name, "Detail", "Item", new { itemId = @item.Id, characterId = @Model.Character.Id })
                    </td>
                    <td>
                        <span style="width: 10px;">-</span>
                    </td>
                    <td>
                        @item.Type.ToString()
                    </td>
                </tr>
            }
        </table>
        <div style="height: 180.111px; width: 74.858px;">
            @if (@Model.Items.Any(x=>x.Type == ItemType.Head))
            {
                <div style="height: 17.767%; width: 100%; background-image: url('/images/mannequin/head_blue.png'); float: left;">
                </div>
            }
            else
            {
                <div style="height: 17.767%; width: 100%; background-image: url('/images/mannequin/head_grey.png'); float: left;">
                </div> 
            }
            @if (@Model.Items.Any(x=>x.Type == ItemType.TwoHand) || @Model.Items.Where(x=>x.Type == ItemType.Hand).Count() == 2)
            {
                <div style="height: 48.36%; width: 20%; background-image: url('/images/mannequin/rightArm_grey.png'); float: left;">
                </div>
                <div style="height: 48.36%; width: 20%; background-image: url('/images/mannequin/leftArm_grey.png'); float: right;">
                </div>
            }
            else if(@Model.Items.Where(x=>x.Type == ItemType.Hand).Count() == 1)
            {
                <div style="height: 48.36%; width: 20%; background-image: url('/images/mannequin/rightArm_blue.png'); float: left;">
                </div>
                <div style="height: 48.36%; width: 20%; background-image: url('/images/mannequin/leftArm_grey.png'); float: right;">
                </div>
            }
            else
            {
                <div style="height: 48.36%; width: 20%; background-image: url('/images/mannequin/rightArm_blue.png'); float: left;">
                </div>
                <div style="height: 48.36%; width: 20%; background-image: url('/images/mannequin/leftArm_grey.png'); float: right;">
                </div>
            }

            @if (@Model.Items.Any(x=>x.Type == ItemType.Body))
            {
                <div style="height: 48.304%; width: 60%; background-image: url('/images/mannequin/body_blue.png');float: left;">
                </div>
            }
            else
            {
                <div style="height: 48.304%; width: 60%; background-image: url('/images/mannequin/body_grey.png');float: left;">
                </div>
            }

            @if (@Model.Items.Any(x=>x.Type == ItemType.Feet))
            {
                <div style="height: 33.868%; width: 100%; background-image: url('/images/mannequin/feet_blue.png'); float: left;">
                </div>  
            }
            else
            {
                <div style="height: 33.868%; width: 100%; background-image: url('/images/mannequin/feet_grey.png'); float: left;">
                </div>
            }
        </div>
    }
    <div>
        @Html.ActionLink("Edit Character", "Edit", new {id = @Model.Character.Id}, new { @class = "btn btn-default" })
        @Html.ActionLink("Delete Character", "Delete", new {id = @Model.Character.Id, partyId = @Model.Character.PartyId}, new { @class = "btn btn-default", onclick = "return confirm('Are you sure you wish to delete this Character?');" })
        @Html.ActionLink("Back to Party", "Detail", "Party", new { id = @Model.Character.Party.Id}, new { @class = "btn btn-default" })
        @Html.ActionLink("Visit Shop", "Shop", "Item", new { characterId = @Model.Character.Id}, new { @class = "btn btn-default" })
    </div>
</div>