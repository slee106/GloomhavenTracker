@using GloomhavenTracker.Models.ViewModels
@inject GloomhavenTracker.Data.GloomhavenTrackerContext context;
@model CharacterCreateViewModel
@{
    ViewData["Title"] = "Create Character";
}

<h1>@ViewData["Title"].</h1>

<form asp-controller="Character" asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
    <h4>Create a new party.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Character.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Character.Name" class="form-control" />
            <span asp-validation-for="Character.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Character.Level" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Character.Level" class="form-control" />
            <span asp-validation-for="Character.Level" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Character.ExperiencePoints" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Character.ExperiencePoints" class="form-control" />
            <span asp-validation-for="Character.ExperiencePoints" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Character.Gold" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Character.Gold" class="form-control" />
            <span asp-validation-for="Character.Gold" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Character.CreationDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="date" asp-for="Character.CreationDate" class="form-control" />
            <span asp-validation-for="Character.CreationDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Character.RetirementDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="date" asp-for="Character.RetirementDate" class="form-control" />
            <span asp-validation-for="Character.RetirementDate" class="text-danger"></span>
        </div>
    </div>
    <div style="visibility: hidden; height:0px">
        <div class="col-md-10">
            @Html.EditorFor(model=>model.PartyId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create!</button>
        </div>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}